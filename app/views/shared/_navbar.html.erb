<div class="navbar navbar-expand-sm navbar-light navbar">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "picnic.png" %>
    <% end %>

  <% if user_signed_in? %>
    <%= image_tag "tim.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { target: "#navbarSupportedContent", toggle: 'collapse' }, type: 'button', 'aria-controls': 'navbarSupportedContent', 'aria-expanded': false, 'aria-label': 'Toggle navigation' %>
  <% else %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <% end %>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <div>
          <%= link_to "Home", root_path, class: "dropdown-item text-white" %>
          <%= link_to "Profile", user_path(current_user), class: "dropdown-item text-white" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item text-white" %>
        </div>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
