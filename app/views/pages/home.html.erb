<div class="container">
  <div class="progress">
    <!-- <div class="progress-container"> -->
      <div class="step">
          <p class="step-text">Search</p>
          <div class="bullet bullet-on"></div>
      </div>
      <div class="step">
          <p class="step-text">Space</p>
          <div class="bullet"></div>
      </div>
      <div class="step">
          <p class="step-text">Restaurant</p>
          <div class="bullet"></div>
      </div>
      <div class="step">
          <p class="step-text">Summary</p>
          <div class="bullet"></div>
      </div>
    <!-- </div> -->
  </div>
</div>




<div class="offset-sm-3 col-sm-6">
  <%= simple_form_for :search, url: spaces_path, method: :get do |f| %>
    <%= f.input :area, collection: Area.pluck(:name), placeholder: "Select an area" %>
    <%= f.input :space, placeholder: "Find a space" %>

    <%= f.submit "Search" %>
  <% end %>
</div>

<div
  id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>


