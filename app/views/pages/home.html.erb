<br>
<div class="container">
  <div class="progress">
    <!-- <div class="progress-container"> -->
      <div class="step">
          <p class="step-text">Search</p>
          <div class="bullet bullet-on"></div>
      </div>
      <div class="step">
          <p class="step-text">Space</p>
          <div class="bullet"></div>
      </div>
      <div class="step">
          <p class="step-text">Restaurant</p>
          <div class="bullet"></div>
      </div>
      <div class="step">
          <p class="step-text">Summary</p>
          <div class="bullet"></div>
      </div>
    <!-- </div> -->
  </div>
</div>




<div class="offset-sm-3 col-sm-6">


  

  <div class="tab-card">
    <ul class="nav nav-pills m-3 justify-content-around" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Select an area</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Search a space</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class="form-row ml-3">
          <div class="col">
            <%= simple_form_for :search, url: spaces_path, method: :get do |f| %>
              <%= f.input :area, collection: Area.pluck(:name), prompt: "Select an area", label: false %>     
          </div>
          <div class="col ml-3">
            <%= f.submit "Search", class: "btn btn-primary" %>
            <% end %>
          </div>
          
        </div>
        
      </div>
      <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
        <div class="form-row ml-3">
          <div class="col">
            <%= simple_form_for :search, url: spaces_path, method: :get do |f| %>
              <%= f.input :space, placeholder: "Find a space", label: false %>
          </div>
          <div class="col ml-3">
              <%= f.submit "Search", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
          
      </div>
    </div>
  </div>




  
    
    

    

</div>

<div
  id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>


