<br>
<div class="container">
  <div class="progress">
    <div class="step">
      <p class="step-text">Search</p>
      <div class="bullet bullet-on"></div>
    </div>
    <div class="step">
      <p class="step-text">Space</p>
      <div class="bullet"></div>
    </div>
    <div class="step">
      <p class="step-text">Restaurant</p>
      <div class="bullet"></div>
    </div>
    <div class="step">
      <p class="step-text">Summary</p>
      <div class="bullet"></div>
    </div>
  </div>

  <div class="offset-sm-3 col-sm-6">
    <div class="tab-card">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Select an area</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Search a space</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <div class="w-100">
            <%= simple_form_for :search, url: spaces_path, method: :get do |f| %>
              <div class="d-flex align-items-center justify-content-around">
                <%= f.input :area, collection: Area.pluck(:name), prompt: "Select an area", label: false, wrapper_html: { class: 'mb-0' } %>
                <%= f.submit "Search", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <div class="w-100">
            <%= simple_form_for :search, url: spaces_path, method: :get do |f| %>
              <div class="d-flex align-items-center justify-content-around w-100">
                <%= f.input :space, placeholder: "Find a space", label: false, wrapper_html: { class: 'mb-0' } %>
                <%= f.submit "Search", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
    id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
  </div>



</div>









