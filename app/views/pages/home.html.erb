<h1>Pages#home</h1>

<div>
  <%= form_tag spaces_path, method: :get do %>
    <%= text_field_tag :area,
    params[:area],
    placeholder: "Select an area" %>
    <%= text_field_tag :query,
      params[:query],
      placeholder: "Find a space"
      %>
      <%= submit_tag "Search" %>
  <% end %>
</div>

<div
  id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

