<p id="notice"><%= notice %></p>

<p>
  <strong>Name</strong>
  <%= @restaurant.name %>
</p>

<%= cl_image_tag @restaurant.photo.key, height: 300, width: 400, crop: :fill %>

<p>
  <strong>Location</strong>
  <%= @restaurant.location %>
</p>

<p>
  <strong>Description</strong>
  <%= @restaurant.description %>
</p>

<p>
  <strong>Cuisine</strong>
  <%= @restaurant.cuisine %>
</p>

<p>
  <strong>Price</strong>
  <%= @restaurant.price %>
</p>

<p>
  <strong>Times</strong>
  <%= @restaurant.opening_time %>
  <%= @restaurant.closing_time %>
</p>

<%= link_to toggle_favorite_restaurant_path(@restaurant), method: :post do  %> 
  <% if @restaurant.favorited_by?(current_user) %>
    <i class="fas fa-heart"></i>
  <% else %>
    <i class="far fa-heart"></i>
  <% end %> 
<% end %>

<div
    id="map"
    style="width: 100%; height:200px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>




<%= link_to "Add to plan", restaurant_restaurant_plans_path(@restaurant), method: :post %>

<%= link_to "Back" , restaurants_path(area: params[:area], query: params[:query]) %>
