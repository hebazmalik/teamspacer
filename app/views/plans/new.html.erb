<%= link_to "←", restaurant_path(@restaurant), class: "btn-light" %>
<br>
<div class="my-2">

  <div class="container-progress-bar">
    <div class="progress">
      <div class="step">
        <p class="step-text">Search</p>
        <div class="bullet completed completed-line"></div>
      </div>
        <div class="step">
          <p class="step-text">Space</p>
          <div class="bullet completed completed-line"></div>
        </div>
        <div class="step">
          <p class="step-text">Restaurant</p>
          <div class="bullet completed completed-line"></div>
        </div>
        <div class="step">
          <p class="step-text">Summary</p>
          <div class="bullet bullet-on"></div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="plan-form">
      <h1>Complete your plan</h1>
      <h3>Your space is:</h3>
      <div class="user-card">
        <%= cl_image_tag @space.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="user-card-infos">
          <h2><strong><%= @space.name %></strong></h2>
          <p><%= @space.location %></p>
        </div>
      </div>
      <h3>Your restaurant is:</h3>
      <div class="user-card">
        <%= cl_image_tag @restaurant.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="user-card-infos">
          <h2><strong><%= @restaurant.name %></strong></h2>
          <p><%= @restaurant.location %></p>
        </div>
      </div>
      <%= simple_form_for @plan do |f| %>
        <%= f.input :space_id, :as => :hidden, :input_html => { :value => @space.id }%>
        <%= f.input :meeting_point, placeholder: "e.g. train station", as: :string %>
        <%= f.input :date, as: :date, html5: true %>
        <%= f.input :time, as: :time, html5: true %>
        <%= f.submit class:"btn-dark" %>
      <% end %>
    </div>
  </div>
</div>

