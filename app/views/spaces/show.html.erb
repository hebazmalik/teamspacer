<br>
<div class="container">
  <div class="progress">
    <!-- <div class="progress-container"> -->
      <div class="step">
          <p class="step-text">Search</p>
          <div class="bullet completed completed-line"></div>
      </div>
      <div class="step">
          <p class="step-text">Space</p>
          <div class="bullet bullet-on"></div>
      </div>
      <div class="step">
          <p class="step-text">Restaurant</p>
          <div class="bullet"></div>
      </div>
      <div class="step">
          <p class="step-text">Summary</p>
          <div class="bullet"></div>
      </div>
    <!-- </div> -->
  </div>
</div>

<div class="show-container">
  <h1><%= @space.name %></h1>
  <%= cl_image_tag @space.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="show-container-infos">
    <p><%= @space.description %></p>
    <p><%= @space.location %></p>
    <br>
    <br>
    <%= link_to toggle_favorite_space_path(@space), method: :post do  %>
      <% if @space.favorited_by?(current_user) %>
        <i class="fas fa-heart"></i>
      <% else %>
        <i class="far fa-heart"></i>
      <% end %>
    <% end %>
  </div>
</div>




<div
    id="map"
    style="width: 100%; height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="show-container-select">
  <%= link_to "Back" , spaces_path(search: { area: params[:search][:area], space: params[:search][:space]}) %>
  <%= link_to "Add to plan", space_space_plans_path(@space), method: :post %>
</div>
