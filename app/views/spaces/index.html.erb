<br>
<div class="container">
  <div class="progress">
    <!-- <div class="progress-container"> -->
      <div class="step">
          <p class="step-text">Search</p>
          <div class="bullet completed completed-line"></div>
      </div>
      <div class="step">
          <p class="step-text">Space</p>
          <div class="bullet bullet-on"></div>
      </div>
      <div class="step">
          <p class="step-text">Restaurant</p>
          <div class="bullet"></div>
      </div>
      <div class="step">
          <p class="step-text">Summary</p>
          <div class="bullet"></div>
      </div>
    <!-- </div> -->
  </div>
</div>

<% if @area %>
  <h1>We found <%= pluralize(@area.spaces.size, "space") %> in <%= @area.name %></h1>


  <% @area.spaces.each do |space| %>
    <div>
      <%= link_to space_path(space, search: {area: params[:search][:area], space: params[:search][:space]}), class: 'card-link' do %>
        <div class="index-card">
          <% if space.photo.attached? %>
            <%= cl_image_tag space.photo.key %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1555041469-a586c61ea9bc?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8c29mYXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" %>
          <% end %>
          <div class="index-card-infos">
            <h2><%= space.name %></h2>
          </div>
        </div>
      <% end %>
      <%= link_to toggle_favorite_space_path(space), method: :post do  %>
        <% if space.favorited_by?(current_user) %>
          <i class="fas fa-heart"></i>
        <% else %>
          <i class="far fa-heart"></i>
        <% end %>
      <% end %>
    </div>
  <% end  %>
<% else %>
  <h1>We found <%= pluralize(@spaces.size, "space") %> near <%= params[:search][:space] %></h1>
  <% @spaces.each do |space| %>
    <div>
      <%= link_to space_path(space, search: {area: params[:search][:area], space: params[:search][:space]}), class: 'card-link' do %>
        <div class="index-card">
          <% if space.photo.attached? %>
            <%= cl_image_tag space.photo.key %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1555041469-a586c61ea9bc?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8c29mYXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" %>
          <% end %>
          <div class="index-card-infos">
            <h2><%= space.name %></h2>
          </div>
        </div>
      <% end %>
      <%= link_to toggle_favorite_space_path(space), method: :post do  %>
        <% if space.favorited_by?(current_user) %>
          <i class="fas fa-heart"></i>
        <% else %>
          <i class="far fa-heart"></i>
        <% end %>
      <% end %>
    </div>
  <% end  %>
<% end  %>

